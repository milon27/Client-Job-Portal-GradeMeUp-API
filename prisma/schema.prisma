datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// test-many to many
model post {
  pid   Int    @id @default(autoincrement())
  title String
  tags  tag[]  @relation("post_tag")
}

model tag {
  tid   Int    @id @default(autoincrement())
  name  String
  posts post[] @relation("post_tag")
}

//test

enum Gender {
  MALE
  FEMALE
}

enum JOB_TYPE {
  FULL_TIME
  PART_TIME
  INTERNSHIP
}

// all models
model Admin {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(100)
  email      String   @unique @db.VarChar(155)
  password   String
  created_at DateTime @default(now())

  @@map("admin")
}

model Candidate {
  id           Int        @id @default(autoincrement())
  name         String     @db.VarChar(50)
  email        String     @unique @db.VarChar(50)
  password     String
  image_url    String
  gender       Gender     @default(MALE)
  dob          DateTime
  country      String
  region       String
  full_address String
  zip_code     String     @db.VarChar(20)
  languages    Language[] @relation("candidate_language")

  //professional info
  job_type JOB_TYPE @default(FULL_TIME)

  job_category JobCategory @relation(fields: [job_cat_id], references: [id])
  job_cat_id   Int

  created_at DateTime @default(now())

  @@map("candidate")
}

// other models

model JobCategory {
  id        Int         @id @default(autoincrement())
  title     String
  Candidate Candidate[]

  @@map("job_category")
}

// model JobProfession {
